import java.util.Scanner;
public class uri1159{
  public static void main(String[] args){
    Scanner sc = new Scanner(System.in);
    int x = sc.nextInt();
    int y=x;
    int sum=0;
    for(int i=y; x==0; i++){
      if(i%2==0){
        sum+=i;
        x--;
      }
    }
    System.out.println(sum);
    
  }
}